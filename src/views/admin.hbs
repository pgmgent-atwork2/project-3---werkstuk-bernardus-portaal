<div class="page_title">
    <h1>Laatst toegevoegd:</h1>
</div>
<div class="dashboard_users">
    <ul class="users_list">
        {{#each users}}
        {{#ifEquals role.label "Admin"}}
        <!-- Als de rol 'admin' is, toon niets -->
        {{else}}
        <a href="/user/{{id}}">
            <li class="profile_user">
                <div class="image_of_user">
                    <img src="images/avatars/{{firstname}}{{lastname}}.jpg" alt="{{firstname}}">
                </div>
                <div class="user_info_profile">
                    <p>{{firstname}} {{lastname}}</p>
                    <p>{{username}}</p>
                </div>
            </li>
        </a>
        {{/ifEquals}}
        {{/each}}
    </ul>

</div>
